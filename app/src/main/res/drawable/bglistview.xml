<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item> <!-- Trạng thái bình thường khi không click -->
        <shape>
            <solid android:color="#BFE7E5" />
            <!-- Thiết lập màu nền cho nút -->

            <stroke android:width="1dp" android:color="#63cace" />

            <corners android:radius="30dp" />

            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape>
    </item>

</selector>