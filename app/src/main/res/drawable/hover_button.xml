<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi nút click -->
    <item
        android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="#FFC0A8" android:startColor="#9A0E14" />

            <stroke android:width="1dp" android:color="#1bb7a5" />

            <corners android:radius="50dp" />
            <!--<padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />-->
        </shape>
    </item>
    <!-- Trạng thái bình thường khi không click -->
    <item>
        <shape>
            <solid android:color="#F7E8AF" />
            <!-- Thiết lập màu nền cho nút -->

            <stroke android:width="1dp" android:color="#63cace" />

            <corners android:radius="50dp" />

            <padding android:bottom="5dp" android:left="10dp" android:right="10dp" android:top="5dp" />
        </shape>
    </item>

</selector>