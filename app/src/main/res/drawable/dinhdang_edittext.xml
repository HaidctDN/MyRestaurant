<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Màu nền -->
    <solid android:color="#BFD9E7"></solid>
    <!-- độ rộng viền và màu -->
    <stroke
        android:width="2dp"
        android:color="#44BBB6"></stroke>
    <!-- chỗ nào set padding -->
    <padding
        android:bottom="4dp"
        android:left="10dp"
        android:right="10dp"
        android:top="4dp"></padding>
    <!-- chỗ này set độ cong góc -->
    <corners android:radius="20dp"></corners>

</shape>