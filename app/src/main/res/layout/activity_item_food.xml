<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView_foodImg"
        android:layout_width="65sp"
        android:layout_height="70sp" />

    <CheckBox
        android:id="@+id/checkBox_foodName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5sp"
        android:layout_toLeftOf="@+id/buttonUp"
        android:layout_toRightOf="@+id/imageView_foodImg"
        android:checked="false"
        android:textSize="12dp" />

    <EditText
        android:id="@+id/editText_quanitity"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5sp"
        android:background="@drawable/dinhdang_edittext"
        android:enabled="false"
        android:inputType="number"
        android:textSize="24dp" />

    <Button
        android:id="@+id/buttonDown"
        android:layout_width="35sp"
        android:layout_height="40sp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5sp"
        android:layout_toLeftOf="@+id/editText_quanitity"
        android:background="@drawable/arrow_down"
        android:enabled="false" />

    <Button
        android:id="@+id/buttonUp"
        android:layout_width="35sp"
        android:layout_height="40sp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/buttonDown"
        android:background="@drawable/arrow_up"
        android:enabled="false" />
</RelativeLayout>